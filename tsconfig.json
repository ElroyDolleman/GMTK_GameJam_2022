{
	"compilerOptions": {
		"module": "es6",
		"target": "es5",

		"jsx": "react",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": ["dom", "esnext"]
	},
	"include": ["source/**/*"],
	"exclude": ["node_modules"]
}